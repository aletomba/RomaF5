@model RomaF5.Models.Proveedor

@{
    ViewData["Title"] = "Cambiar Precio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Cambiar Precio de Productos de @Model.Nombre</h2>

<form asp-action="CambiarPrecio" method="post">
    <div class="form-group">
        <label for="precioCompra">Porcentaje de Cambio precio compra:</label>
        <input type="number" class="form-control" id="precioCompra" name="precioCompra" >
    </div> 
    <div class="form-group">
        <label for="precioventaMin">Porcentaje de Cambio precio minorista:</label>
        <input type="number" class="form-control" id="precioventaMin" name="precioventaMin" >
    </div>
    <div class="form-group">
        <label for="precioVentaMay">Porcentaje de Cambio precio mayorista:</label>
        <input type="number" class="form-control" id="precioVentaMay" name="precioVentaMay" >
    </div>
    <button type="submit" class="btn btn-primary">Aplicar Cambio</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
