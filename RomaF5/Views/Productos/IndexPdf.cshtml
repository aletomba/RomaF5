@using RomaF5.Models.productosViewModels
@model ProductoViewModel
@{
    Layout = null;
}
@* sacar provedores agregar color por renglon verde suave, link directo al insta 
    modelo para crear catalogo
    
*@

<head>
    <link rel="stylesheet" href="~/css/pdf-styles.css" />
</head>
<body>
    <h1 style="text-align:center">Lista de Precios "Tres pinos"</h1>
    <img class="centro" src="~/img/imagen trespinos.jpg"/>
    <h2 style="font-family"> Hernan cel: 3442-647905</h2>
    <p>Sígueme en Instagram: <a href="https://www.instagram.com/trespinos.ok">trespinos.ok</a></p>

    @if (Model.EsMayorista)
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="background-color:azure" scope="col">Cod</th>
                        <th scope="col">Nombre</th>
                        <th style="background-color:aquamarine" scope="col">Precio</th>                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model.Productos)
                    {
                        <tr>
                            <td style="background-color:azure">@producto.Id</td>
                            <td style="background-color:aqua">@producto.Nombre</td>
                            <td style="background-color:aquamarine">@producto.PrecioMayorista</td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <br />
    }
    else
    {

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="background-color:azure" scope="col">Cod</th>
                        <th scope="col">Nombre</th>
                        <th style="background-color:aquamarine" scope="col">Precio</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var producto in Model.Productos)
                    {
                        <tr>
                            <td style="background-color:azure">@producto.Id</td>
                            <td style="background-color:aqua">@producto.Nombre</td>
                            <td style="background-color:aquamarine">@producto.PrecioVenta</td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <br />
    }
</body>


